<Window x:Class="ImageSlider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSlider"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowStyle="None" Opacity="1"> 
    <Grid x:Name="gdMainWindow" Height="1080" Width="1920" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Background="Pink"/>
        <Grid Grid.Row="0" Grid.Column="1" Background="Red"/>
        <Grid Grid.Row="1" Grid.Column="0" Background="White"/>
        <Grid Grid.Row="1" Grid.Column="1" Background="Black"/>
        
    </Grid>
</Window>
